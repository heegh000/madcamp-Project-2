<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/endDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gd_bg"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gd_title"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="게임 종료"
            android:fontFamily="@font/wild"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/stateResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:text="당신은 생존하였습니다."
            android:textStyle="bold"
            android:fontFamily="@font/wild"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/goldResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:text="금화 : "
            android:textStyle="bold"
            android:fontFamily="@font/wild"
            android:textSize="24sp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/endConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textColor="@color/white"
            android:fontFamily="@font/wild"
            android:textSize="24sp"
            android:background="@drawable/gd_confirm"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>