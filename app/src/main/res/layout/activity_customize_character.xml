<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep2"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    tools:context=".login.CustomizeCharacter">


    <TextView
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/xbones"
        android:text="Hello"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/xbones"
        android:text="User Name"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/hello"
        />

    <TextView
        android:id="@+id/chooseA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Choose your avatar! \nThree Characters Available."
        android:fontFamily="@font/xbones"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/egg"
        app:layout_constraintBottom_toTopOf="@id/create_account"
        app:layout_constraintTop_toBottomOf="@+id/chooseA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_account"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_google"
        android:fontFamily="@font/xbones"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>