<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bgDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/gd_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gd_bg"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gd_title"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="비상금"
            android:fontFamily="@font/wild"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:text="비상금을 챙겨가시겠습니까? \n * 비상금은 거래를 위해 사용할 수 있으며, 거래 실패 시 영구 소멸합니다."
            android:textStyle="bold"
            android:fontFamily="@font/wild"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="보유 금화 :"
                android:textStyle="bold"
                android:fontFamily="@font/wild"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/myGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="0"
                android:textStyle="bold"
                android:fontFamily="@font/wild"
                android:textSize="24sp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/bringGold"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:inputType="numberDecimal"
            android:textSize="24sp"
            android:fontFamily="@font/wild"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bgConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textColor="@color/white"
            android:background="@drawable/gd_confirm"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>


    </LinearLayout>

</LinearLayout>