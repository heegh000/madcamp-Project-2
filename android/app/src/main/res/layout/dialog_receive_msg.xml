<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/receiveDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/receiveMsgLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gd_bg"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gd_title"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="뒷거래 제안 도착"
            android:fontFamily="@font/wild"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:text="누군가로부터 은밀한 거래 제안이 도착했습니다."
            android:textStyle="bold"
            android:fontFamily="@font/wild"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="보낸 사람 :"
                android:textStyle="bold"
                android:fontFamily="@font/wild"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="0"
                android:textStyle="bold"
                android:fontFamily="@font/wild"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="받은 금화 :"
                android:textStyle="bold"
                android:fontFamily="@font/wild"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/receiveGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="0"
                android:textStyle="bold"
                android:fontFamily="@font/wild"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="보낼 메세지 :"
                android:textStyle="bold"
                android:fontFamily="@font/wild"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/receiveMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:text="이 정도면 서로 만족스러운 거래가 되지 않겠어?"
                android:textStyle="bold"
                android:fontFamily="@font/wild"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rmConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="받기"
                android:textColor="@color/white"
                android:fontFamily="@font/wild"
                android:textSize="24sp"
                android:background="@drawable/gd_confirm"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>