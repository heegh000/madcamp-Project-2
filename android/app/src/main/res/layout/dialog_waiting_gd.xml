<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/waitGDDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gd_bg"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gd_title"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="금화 배분 중"
            android:fontFamily="@font/wild"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:text="선장의 금화 배분을 선원들이 반대하여\n선장이 사망했습니다"
            android:textStyle="bold"
            android:fontFamily="@font/wild"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/tvWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:text="선장의 금화배분을 기다리세요."
            android:textStyle="bold"
            android:fontFamily="@font/wild"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:text="배분이 완료되면 투표/뒷거래를 진행하세요."
            android:textStyle="bold"
            android:fontFamily="@font/wild"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/tvRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="20dp"
            android:text="현재 생존자는 5명입니다"
            android:textStyle="bold"
            android:fontFamily="@font/wild"
            android:textSize="24sp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wgdConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textColor="@color/white"
            android:fontFamily="@font/wild"
            android:textSize="24sp"
            android:background="@drawable/gd_confirm"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>